FROM apache/iceberg-rest-fixture:1.9.2

# Install curl to download the PostgreSQL JDBC driver
USER root
RUN apt-get update && apt-get install -y curl

# Download the PostgreSQL JDBC driver
RUN curl -o /usr/lib/iceberg-rest/postgresql-42.7.5.jar https://jdbc.postgresql.org/download/postgresql-42.7.5.jar

# Switch back to the default user
USER iceberg
